{% for message in app.flashes('notice') %}
    <div class="alert alert-info no-border mb-2" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">×</span>
        </button>
        {{ message }}
    </div>
{% endfor %}
