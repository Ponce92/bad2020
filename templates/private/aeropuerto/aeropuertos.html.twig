{% extends 'layout/layout.html.twig' %}
    {% block header_links %}
        <div class="col col-md-12">
            <div class="content-header-right breadcrumb-new" style="padding-left: 15px;padding-bottom: 10px;">
                <div class="row breadcrumbs-top d-inline-block">
                    <div class="breadcrumb-wrapper col-12">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item">
                                <a href="{{ path('homesvao') }}">svao</a>
                            </li>
                            <li class="breadcrumb-item">private
                            </li>
                            <li class="breadcrumb-item">Catalogo areopuertos
                            </li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
    {% endblock %}
{% block body %}

    {# ==================================================================================================   #}
    <div class="row">
        <div class="col-md-8 col-sm-12" >
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">:: Aeropuertos</h4>
                    <a class="heading-elements-toggle"><i class="icon-ellipsis font-medium-3"></i></a>
                    <div class="heading-elements">
                            <button type="button"
                                    onclick="loadTarget('{{ path('aeropuertos.create') }}',$('#mainCard'))"
                                    class="btn btn-success"
                                    id="btn-create"></i>
                                <i class="icon-plus"></i> Agregar aeropuerto
                            </button>
                    </div>
                </div>
                <div class="card-body collapse in">
                    <div class="card-block">
                        <table id="mainDt" class="table table-bordered sget">
                            <thead>
                                <tr>
                                    <th>Codigo</th>
                                    <th>Nombre</th>
                                    <th>Encargado</th>
                                    <th>Ciudad</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for pvt in list %}
                                <tr>
                                    <td>{{ pvt.codigo }} </td>
                                    <td>{{ pvt.nombre }}</td>
                                    <td>{{ pvt.encargado }}</td>
                                    <td>{{ pvt.ciudad.nombre }}</td>
                                    <td width="100">
                                        <button type="button"
                                                title="editar"
                                                onclick="loadTarget('{{ path('aeropuertos.edit',{'id':pvt.id}) }}',$('#mainCard'))"
                                                class="btn btn-sm btn-info">
                                            <i class="icon-edit"></i>
                                        </button>
                                        <button type="button"
                                                title="Ajuste"
                                                onclick="loadTarget('{{ path('aeropuertos.edit',{'id':pvt.id}) }}',$('#mainCard'))"
                                                class="btn btn-sm btn-danger">
                                            <i class="icon-trash2"></i>
                                        </button>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>

                    </div>
                    <div class="card-block">
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4 col-sm-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">:: Aeropuerto</h4>
                    <div class="heading-elements">
                        <ul class="list-inline mb-0">
                            <li><a data-action="collapse"><i class="icon-minus4"></i></a></li>
                            <li><a data-action="expand"><i class="icon-expand2"></i></a></li>
                        </ul>
                    </div>
                </div>
                <div class="card-body collapse in">
                    <div class="card-block" id="mainCard">
                        {% if form is defined %}
                            {% include 'private/aeropuerto/create.html.twig' %}
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
    {# ==================================================================================================   #}


 {% endblock %}

