{% extends 'layout/layout.html.twig' %}
    {% block header_links %}
        <div class="col col-md-12">
            <div class="content-header-right breadcrumb-new" style="padding-left: 15px;padding-bottom: 10px;">
                <div class="row breadcrumbs-top d-inline-block">
                    <div class="breadcrumb-wrapper col-12">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item">
                                <a href="{{ path('homesvao') }}">svao</a>
                            </li>
                            <li class="breadcrumb-item">cliente
                            </li>
                            <li class="breadcrumb-item">Mi historico
                            </li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
    {% endblock %}
{% block body %}

    {# ==================================================================================================   #}
    <div class="row">
        <div class="col-md-12 col-sm-12" >
            <div class="card">
                <div class="card-header">
                    <h4><i class="icon-map-signs"></i> Mi Historico</h4>
                    <a class="heading-elements-toggle"><i class="icon-ellipsis font-medium-3"></i></a>
                    <div class="heading-elements">
                        <div class="btn-group mr-1 mb-1 show">
                        </div>
                    </div>
                </div>
                <div class="card-body collapse in">
                    <div class="card-block" id="dtable">
                        <table class="table table-bordered table-striped     sget">
                            <thead>
                            <tr>
                                <th>Origen</th>
                                <th>Destino</th>
                                <th>Millas  ganadas</th>
                                <th>Aerolinea</th>
                                <th>Estado</th>
                                <th></th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for pvt in list %}
                                <tr>
                                    <td>{{ pvt.horario.vuelo.origen.ciudad.nombre }} </td>
                                    <td>{{ pvt.horario.vuelo.destino.ciudad.nombre }} </td>
                                    <td>{{ pvt.horario.vuelo.millasAsignables }} Millas</td>
                                    <td>{{ pvt.horario.vuelo.aerolinea.nombre }}</td>
                                    <td>{{ pvt.estado }}</td>
                                    <td align="middle">
                                        {% if pvt.estado =='Reservado' %}
                                            <button type="button" class="btn btn-red btn-sm">
                                                <i class="icon-close"></i>
                                            </button>
                                        {% endif %}
                                        {% if pvt.estado =='Cancelado' %}
                                            <button type="button"
                                                    disabled
                                                    class="btn btn-red btn-sm">
                                                <i class="icon-close"></i>
                                            </button>
                                            <button type="button"
                                                    disabled
                                                    class="btn btn-red btn-sm">
                                                <i class="icon-close"></i>
                                            </button>
                                        {% endif %}
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>



    {# ==================================================================================================   #}


    <style type="text/css">
        textarea{
            resize: none;
        }
        .h400{
            max-height: 400px;
            overflow-y: auto;
        }


        table.sget tbody tr:nth-of-type(odd){
            background-color:   rgba(245,247,250,1);
        }
        table.sget tbody tr td{
            padding-bottom: 3px !important;
            padding-top: 3px !important;
            padding-left: 8px !important;
            padding-right: 8px !important;
            vertical-align: middle;
        }
        table.sget{
            -webkit-border-top-left-radius: 10px;
            -webkit-border-top-right-radius:10px ;
            -moz-border-radius-topleft: 10px;
            -moz-border-radius-topright: 10px;
        }

        table.sget tbody  tr:hover{
            background-color:   rgba(49,165,248,.2);
        }

        textarea{
            resize: none;
        }
    </style>

{% endblock %}

