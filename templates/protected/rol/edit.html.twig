{{ form_start(form,{'class':'form'}) }}
    {%  if not form.vars.valid %}
        <div class="alert alert-danger no-border mb-2 small" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">Ã—</span>
            </button>
            <strong>Formulario invalido</strong>
        </div>
    {% endif %}
<div class="form-body">
    <div class="row">
        <div class="col-md-12">
            <label for="name">Nombre :</label>
            <div class="form-grop">
                {{ form_widget(form.name) }}
                <div class=" invalid-feedback text-danger">
                    {{ form_errors(form.name) }}
                </div>
            </div>
        </div>
        <div class="col-md-12"><br></div>
        <div class="col-md-12">
            <label for="description">Descripcion :</label>
            <div class="form-group" disabled>
                {{ form(form.description) }}
                <div class="col-md-12 invalid-feedback text-danger">
                    {{ form_errors(form.description) }}
                </div>

            </div>
        </div>
    </div>
    <div class="row">
        <hr>
    </div>


    {% if edit==false %}
        {{ form_widget(form.save,{'attr':{'class':'btn btn-info','disabled':'disabled'}}) }}
    {% endif %}
    {% if edit==true %}
        {{ form_widget(form.save,{'attr':{'class':'btn btn-info'}}) }}
    {% endif %}
</div>
    {{ form_row(form._token) }}
{{ form_end(form) }}