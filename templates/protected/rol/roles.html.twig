 {% extends 'layout/layout.html.twig' %}
    {% block header_links %}
        <div class="col col-md-12">
            <div class="content-header-right breadcrumb-new" style="padding-left: 15px;padding-bottom: 10px;">
                <div class="row breadcrumbs-top d-inline-block">
                    <div class="breadcrumb-wrapper col-12">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item">
                                <a href="{{ path('homesvao') }}">svao</a>
                            </li>
                            <li class="breadcrumb-item">protected
                            </li>
                            <li class="breadcrumb-item">Roles
                            </li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
    {% endblock %}
{% block body %}
    <link rel="stylesheet" type="text/css" href="{{ asset('filetree/css/file-explore.css') }}">
    {# ==================================================================================================   #}
    <div class="row">
        <div class="col-md-8 col-sm-12" >
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">:: roles</h4>
                    <a class="heading-elements-toggle"><i class="icon-ellipsis font-medium-3"></i></a>
                    <div class="heading-elements">
                        <button type="button"
                                id="btn-create"
                                onclick="loadTarget('{{ path('roles.create') }}',$('#rol_crd'))"
                                class="btn btn-success">
                            <i class="icon-plus"  style="color: white;"></i> Agregar
                        </button>
                    </div>
                </div>
                <div class="card-body collapse in">
                    <div class="card-block" id="dtable">
                        <table class="table table-bordered sget">
                            <thead>
                            <tr>
                                <th>Id</th>
                                <th>Nombre</th>
                                <th>Descripcion</th>
                                <th>Aciones</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for pvt in list %}
                                <tr>
                                    <td>{{ pvt.id }}</td>
                                    <td>{{ pvt.name }}</td>
                                    <td>{{ pvt.description }}</td>
                                    <td width="150">
                                        <button type="button"
                                                title="Editar {{ pvt.name }}"
                                                onclick="loadTarget('{{ path('roles.edit',{'id':pvt.id}) }}',$('#rol_crd'))"
                                                class="btn btn-sm btn-info">
                                            <i class="icon-edit"></i>
                                        </button>
                                        <button type="button"
                                                title="Permisos asignados a {{ pvt.name }}"
                                                onclick="loadTarget('{{ path('svao.roles.permisos',{'rol':pvt.id}) }}',$('#rol_crd'))"
                                                class="btn btn-sm btn-primary">
                                            <i class="icon-key"></i>
                                        </button>
                                        <button type="button"
                                                title="Eliminar  : {{ pvt.name }}"
                                                onclick="loadTarget('{{ path('svao.roles.delete',{'id':pvt.id}) }}',$('#rol_crd'))"
                                                class="btn btn-sm btn-danger">
                                            <i class="icon-trash2"></i>
                                        </button>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>

                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4 col-sm-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">:: Rol</h4>
                    <div class="heading-elements">
                        <ul class="list-inline mb-0">
                            <li><a data-action="collapse"><i class="icon-minus4"></i></a></li>
                            <li><a data-action="expand"><i class="icon-expand2"></i></a></li>
                        </ul>
                    </div>
                </div>
                <div class="card-body collapse in">
                    <div class="card-block" id="rol_crd">

                    </div>
                </div>
            </div>
        </div>
    </div>

    {# ==================================================================================================   #}

    <style type="text/css">
            textarea{
                resize: none;
            }
            .h400{
                max-height: 400px;
                overflow-y: auto;
            }


            table.sget tbody tr:nth-of-type(odd){
                background-color:   rgba(245,247,250,1);
            }
            table.sget tbody tr td{
                padding-bottom: 3px !important;
                padding-top: 3px !important;
                padding-left: 8px !important;
                padding-right: 8px !important;
                vertical-align: middle;
            }
            table.sget{
                -webkit-border-top-left-radius: 10px;
                -webkit-border-top-right-radius:10px ;
                -moz-border-radius-topleft: 10px;
                -moz-border-radius-topright: 10px;
            }

            table.sget tbody  tr:hover{
                background-color:   rgba(49,165,248,.2);
            }

            textarea{
                resize: none;
            }
            .chek:hover{
                cursor: pointer;
            }
    </style>

{% endblock %}

 {% block js %}
     <script src="{{ asset('utils/functions.js') }} " type="text/javascript"></script>
     <script src="{{ asset('filetree/js/file-explore.js') }} " type="text/javascript"></script>

     <script type="text/javascript">
        function saveDataCheck()
        {

        }
     </script>
 {% endblock %}