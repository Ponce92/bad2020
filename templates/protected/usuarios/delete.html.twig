<div class="col-md-12">
    <div class="alert alert-danger alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">Ã—</span>
        </button>
        <strong>Alerta!</strong> Se eliminara el usuario del sistema
    </div>
</div>
<div class="col-md-12">
    <div class="row">
        <div class="col-md-4"><strong>Nombre :</strong></div>
        <div class="col-md-8"><p>        {{ user.username }}</p></div>
    </div>
    <div class="row">
        <div class="col-md-4"><strong>Descripcion :</strong></div>
        <div class="col-md-8"><p>        {{ user.rol.name }}</p></div>
    </div>

    <form class="form" method="POST" action="{{ path('usuarios.destroy',{'id':user.id}) }}">

        <div class="form-actions right">
            <button type="button"
                    onclick="$('#btn-create').click()"
                    class="btn btn-grey">
                <i class="icon-close"></i> Cancelar
            </button>
            <button type="submit"
                    class="btn btn-danger">
                <i class="icon-trash2"></i> Eliminar
            </button>
        </div>
    </form>

</div>